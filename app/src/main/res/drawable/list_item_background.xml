<selector xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:state_pressed="true">
        <shape>
            <solid android:color="#3300aaaa"/>
            <stroke
                android:width="1dp"
                android:color="#dddddd" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF"/>
            <stroke
                android:width="0dp" />
        </shape>
    </item>
</selector>