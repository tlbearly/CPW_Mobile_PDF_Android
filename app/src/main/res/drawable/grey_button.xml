<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#707777" />
            <stroke
                android:width="1dp"
                android:color="#333333" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="20dp"
                android:top="0dp"
                android:right="20dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#707777"
                android:endColor="#606666"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#666666" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="20dp"
                android:top="0dp"
                android:right="20dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>