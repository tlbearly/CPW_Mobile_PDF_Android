<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <androidx.cardview.widget.CardView
        android:id="@+id/row_item"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Red X button -->
            <!--ImageView
                android:id="@+id/ic_delete"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:contentDescription="@string/deleteFile"
                android:src="@android:drawable/ic_delete"
                android:visibility="gone"
                 /-->

            <!-- Check Mark for selected state-->
            <ImageView
                android:id="@+id/ic_selected_icon"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:contentDescription="@string/selected_icon"
                android:visibility="gone"
                card_view:srcCompat="@drawable/ic_baseline_check_circle_24"
                tools:ignore="RedundantDescriptionCheck" />

            <!-- thumbnail -->
            <ImageView
                android:id="@+id/pdfImage"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/pdfimg"
                android:src="@android:drawable/ic_menu_mapmode"
                tools:ignore="ImageContrastCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nameTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold" />

                    <!-- edit button -->
                    <ImageView
                        android:id="@+id/rename_edit"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_box"
                        android:contentDescription="@string/edit"
                        android:src="@drawable/ic_baseline_edit_24"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- Edit Map Name -->
                    <EditText
                        android:id="@+id/renameTxt"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints="@string/renameMap"
                        android:background="@drawable/edit_box"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="@string/renameMap"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textStyle="bold"
                        android:visibility="gone">

                        <requestFocus />
                    </EditText>
                    <!-- save button -->
                    <ImageView
                        android:id="@+id/rename_save"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edit_box"
                        android:contentDescription="@string/edit"
                        android:src="@drawable/ic_baseline_save_24"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fileSizeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/locationIcon"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:contentDescription="@string/onMap"
                        android:visibility="gone"
                        card_view:srcCompat="@drawable/ic_nearme" />

                    <TextView
                        android:id="@+id/distToMapTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold" />
                </LinearLayout>

                <!--ProgressBar
                    android:id="@+id/loadProgress"
                    style="@style/CustomProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:indeterminate="true"
                    android:max="100"
                    android:progress="0"
                    android:visibility="gone" /-->
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>