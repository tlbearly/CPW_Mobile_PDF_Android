<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.AppCompat.Button.Colored"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/list_item_background">

            <!-- Red X button -->
            <!--ImageView
                android:id="@+id/ic_delete"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:contentDescription="@string/deleteFile"
                android:src="@android:drawable/ic_delete"
                android:visibility="gone"
                 /-->

            <!-- Check Mark for selected state
            android:layout_width="50dp"
                android:layout_height="80dp"-->
            <ImageView
                android:id="@+id/ic_selected_icon"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:contentDescription="@string/selected_icon"
                card_view:srcCompat="@drawable/ic_baseline_check_circle_24"
                android:visibility="gone"
                tools:ignore="RedundantDescriptionCheck" />

            <ImageView
                android:id="@+id/pdfImage"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/pdfimg"
                android:src="@android:drawable/ic_menu_mapmode"
                tools:ignore="ImageContrastCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

                <!-- Edit Map Name - did not work, scrolling irradically! -->
                <EditText
                    android:id="@+id/renameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:autofillHints="@string/renameMap"
                    android:background="@drawable/edit_box"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="@string/renameMap"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:visibility="gone">

                    <requestFocus />
                </EditText>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fileSizeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/locationIcon"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:contentDescription="@string/onMap"
                        android:visibility="gone"
                        card_view:srcCompat="@drawable/ic_nearme" />

                    <TextView
                        android:id="@+id/distToMapTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/loadProgress"
                    style="@style/CustomProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:indeterminate="true"
                    android:max="100"
                    android:progress="0"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>